<!-- Verify user is not authenticated -->
<% if (!currentUser) { %>
<section id="join">

  <div class="container mt-5">
    <div class="row">

      <!-- Sign up form -->
      <div class="col-sm-6">
        <h1>Sign Up</h1>
        <div class="card signup-join">
          <div class="card-body">

            <!-- Makes POST request to /signup route -->
            <form action="/signup" method="POST">
              <div class="form-group">
                <label for="username" class="login-label">Username</label>
                <input minlength="6" maxlength="12" type="username" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                <label for="password" class="login-label">Password</label>
                <input minlength="6" maxlength="18" type="password" class="form-control" name="password" required>
              </div>
              <div class="form-group">
                <label for="email" class="login-label">Email</label>
                <input type="email" class="form-control" name="email" required>
              </div>
              <button type="submit" class="btn btn-outline-light">Sign Up</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Login for users that're already signed up -->
      <div class="col-sm-6">
        <h1>Login</h1>
        <div class="card signup-join">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="username" class="login-label">Username</label>
                <input type="username" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password" class="login-label">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-outline-light">Login</button>
            </form>
          </div>
        </div>
      </div>



