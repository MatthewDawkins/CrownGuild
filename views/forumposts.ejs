<% const {title, body, _id, date, username} = foundPost %>


<section id="forumPost">
<div class="container forum-post">
  <div class="forum username">
    <i><%=username.username%><i>
  </div>
  <div class="forum title">
    <h3><%=title%></h3>
  </div>
  <div>
  <p><%=body%></p>
  </div>
<form class="composeForm forum" action="/forums" method="post">
  <div class="form-group">
    <label>Comment</label>
    <textarea minlength="20" maxlength="2000" class="form-control" rows="5" name="postComment" placeholder="Compose your comment." required></textarea>
  </div>
  <div class="form-group">
    <button class="forum-button btn btn-outline-light" type="submit" name="button">Create Comment</button>
  </div>
</form>
</div>
